<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>h2oServiceServlet</servlet-name>
    <servlet-class>edu.oswego.csc480_hci521_2013.server.H2OServiceImpl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>h2oServiceServlet</servlet-name>
    <url-pattern>/Main/h2oService</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Main.html</welcome-file>
  </welcome-file-list>

</web-app>
