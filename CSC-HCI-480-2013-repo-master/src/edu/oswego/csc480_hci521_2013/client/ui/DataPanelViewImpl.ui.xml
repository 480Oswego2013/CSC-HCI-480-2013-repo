<!-- DataPanelViewImpl.ui.xml -->

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:gwt='urn:import:com.google.gwt.user.client.ui'
    xmlns:cv='urn:import:com.google.gwt.user.cellview.client'>

    <gwt:HTMLPanel>
        <gwt:MenuBar ui:field='visbar' vertical="false">
            <gwt:MenuItem ui:field='generate'>Generate Forest</gwt:MenuItem>
            <gwt:MenuItem ui:field='trees' enabled="false">Trees
                <gwt:MenuBar ui:field='treebar' vertical="true">
                </gwt:MenuBar>
            </gwt:MenuItem>
        </gwt:MenuBar>

        <br/>

        <cv:DataGrid ui:field='dataTable' width="100%" height="90%" />
    </gwt:HTMLPanel>
</ui:UiBinder>
